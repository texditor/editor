{
  "name": "@texditor/editor",
  "version": "1.1.3",
  "description": "Texditor is a modern, block-based text editor written in TypeScript. It has a clean architecture and an extensible design that allows users to customize the content blocks",
  "type": "module",
  "main": "./dist/texditor.mjs",
  "module": "./dist/texditor.mjs",
  "types": "./dist/types/texditor.d.ts",
  "exports": {
    ".": {
      "import": "./dist/texditor.mjs",
      "types": "./dist/types/texditor.d.ts"
    },
    "./blocks": {
      "import": "./dist/blocks.mjs",
      "types": "./dist/types/blocks.d.ts"
    },
    "./tools": {
      "import": "./dist/tools.mjs",
      "types": "./dist/types/tools.d.ts"
    },
    "./locales": {
      "import": "./dist/locales.mjs",
      "types": "./dist/types/locales.d.ts"
    },
    "./extensions": {
      "import": "./dist/extensions.mjs",
      "types": "./dist/types/extensions.d.ts"
    },
    "./styles/*.css": {
      "default": "./dist/styles/*.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "prepare": "npm run build",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "eslint": "^9.29.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-static-copy": "^3.1.1"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@priveted/ajax": "^1.0.14"
  }
}
